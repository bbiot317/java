package movie;

import java.util.Scanner;

class Menu extends Abs{

	static void run()
	{
		Scanner sc = new Scanner(System.in);
		while(true) {
			System.out.println("1. 예매\n 2. 예매확인\n 3.예매취소\n 4.종료");
			switch(sc.nextInt()){
				case 1: Reservation.run();
				
					break;
			}
		}
	}
	
	

}



abstract class Abs
{
	static void run() {};
}